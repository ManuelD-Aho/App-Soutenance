{
  "name": "manueld-aho/app-soutenance",
  "description": "Application MVC pour la gestion des soutenances étudiantes",
  "type": "project",
  "license": "proprietary",
  "authors": [
    {
      "name": "ManuelD-Aho",
      "email": "manuel@app-soutenance.fr"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": ">=8.0.0",
    "ext-pdo": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-fileinfo": "*",
    "vlucas/phpdotenv": "^5.5",
    "phpmailer/phpmailer": "^6.8",
    "monolog/monolog": "^2.9",
    "nesbot/carbon": "^2.68",
    "symfony/validator": "^5.4",
    "symfony/http-foundation": "^5.4",
    "beberlei/assert": "^3.3",
    "microsoft/azure-storage-blob": "^1.5",
    "paragonie/anti-csrf": "^2.3",
    "league/flysystem": "^2.5",
    "ramsey/uuid": "^4.7",
    "cakephp/chronos": "^2.4",
    "rakit/validation": "^1.4",
    "firebase/php-jwt": "^6.9"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.6",
    "phpstan/phpstan": "^1.10",
    "squizlabs/php_codesniffer": "^3.7",
    "friendsofphp/php-cs-fixer": "^3.22",
    "mockery/mockery": "^1.6",
    "fakerphp/faker": "^1.23",
    "phpmd/phpmd": "^2.14",
    "symfony/var-dumper": "^5.4",
    "filp/whoops": "^2.15",
    "phpunit/php-code-coverage": "^9.2",
    "roave/security-advisories": "dev-latest",
    "vimeo/psalm": "^5.15"
  },
  "autoload": {
    "psr-4": {
      "App\\": "service/",
      "App\\Controller\\": "backend/controllers/",
      "App\\Model\\": "backend/models/"
    },
    "files": [
      "service/Utils.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "App\\Tests\\": "tests/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "process-timeout": 3600,
    "platform": {
      "php": "8.0.0"
    }
  },
  "scripts": {
    "start": "php -S localhost:8000 -t public/",
    "test": "phpunit",
    "test:coverage": "XDEBUG_MODE=coverage phpunit --coverage-html coverage",
    "cs:check": "phpcs --standard=PSR12 service backend",
    "cs:fix": "phpcbf --standard=PSR12 service backend",
    "stan": "phpstan analyse -l 5 service backend",
    "psalm": "psalm",
    "md": "phpmd service,backend text cleancode,codesize,controversial,design,naming,unusedcode",
    "lint": [
      "@cs:check",
      "@stan"
    ],
    "post-create-project-cmd": [
      "php -r \"copy('.env.example', '.env');\""
    ],
    "post-install-cmd": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ]
  },
  "scripts-descriptions": {
    "start": "Démarrer un serveur de développement",
    "test": "Exécuter les tests PHPUnit",
    "test:coverage": "Exécuter les tests PHPUnit avec génération de la couverture de code",
    "cs:check": "Vérifier le style de code selon PSR-12",
    "cs:fix": "Corriger automatiquement le style de code selon PSR-12",
    "stan": "Exécuter PHPStan pour l'analyse statique",
    "psalm": "Exécuter Psalm pour l'analyse statique",
    "md": "Exécuter PHP Mess Detector",
    "lint": "Exécuter toutes les vérifications de qualité du code"
  }
}