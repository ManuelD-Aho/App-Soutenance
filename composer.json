{
  "name": "manueld-aho/app-soutenance",
  "description": "Application de gestion des soutenances acad√©miques",
  "type": "project",
  "license": "proprietary",
  "authors": [
    {
      "name": "ManuelD-Aho",
      "email": "manuel.d-aho@example.com"
    }
  ],
  "require": {
    "php": "^8.1",
    "ext-pdo": "*",
    "ext-json": "*",
    "ext-fileinfo": "*",
    "vlucas/phpdotenv": "^5.5",
    "monolog/monolog": "^3.3",
    "phpmailer/phpmailer": "^6.8",
    "league/flysystem": "^3.15",
    "league/flysystem-azure-blob-storage": "^3.15",
    "ramsey/uuid": "^4.7",
    "symfony/http-foundation": "^6.3",
    "symfony/routing": "^6.3",
    "respect/validation": "^2.2",
    "intervention/image": "^2.7",
    "setasign/fpdf": "^1.8",
    "tecnickcom/tcpdf": "^6.6"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.1",
    "friendsofphp/php-cs-fixer": "^3.17",
    "squizlabs/php_codesniffer": "^3.7",
    "phpstan/phpstan": "^1.10",
    "symfony/var-dumper": "^6.3",
    "fakerphp/faker": "^1.23"
  },
  "autoload": {
    "psr-4": {
      "App\\": "."
    },
    "files": [
      "service/config.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-root-package-install": [
      "php -r \"copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "php -r \"mkdir('public/uploads/rapports', 0755, true);\"",
      "php -r \"file_exists('public/uploads/rapports/.gitkeep') || touch('public/uploads/rapports/.gitkeep');\""
    ],
    "test": "phpunit",
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "analyze": "phpstan analyse",
    "start": "php -S localhost:8080 -t public",
    "setup": "composer install && php -r \"copy('.env.example', '.env');\""
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}