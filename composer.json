{
  "name": "miage/app-soutenance",
  "description": "Application de gestion des soutenances de l'UFR MIAGE",
  "type": "project",
  "license": "proprietary",
  "authors": [
    {
      "name": "Monsan Josu√©"
    },
    {
      "name": "Akandan Aho"
    },
    {
      "name": "Apata Jean"
    }
  ],
  "require": {
    "php": "^8.0",
    "ext-pdo": "*",
    "ext-pdo_mysql": "*",
    "ext-mbstring": "*",
    "ext-json": "*",
    "ext-gd": "*",
    "vlucas/phpdotenv": "^5.4",
    "firebase/php-jwt": "^6.3",
    "dompdf/dompdf": "^2.0",
    "phpmailer/phpmailer": "^6.6",
    "mpdf/mpdf": "^8.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "squizlabs/php_codesniffer": "^3.7",
    "phpmd/phpmd": "^2.13",
    "phpstan/phpstan": "^1.9",
    "friendsofphp/php-cs-fixer": "^3.13",
    "fakerphp/faker": "^1.20"
  },
  "autoload": {
    "psr-4": {
      "App\\Config\\":  "Config/",
      "App\\":         "Backend/",
      "App\\Service\\": "Service/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "Tests/"
    }
  },
  "scripts": {
    "post-install-cmd": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "test": "phpunit",
    "cs": "phpcs",
    "csfix": "php-cs-fixer fix",
    "phpstan": "phpstan analyse",
    "phpmd": "phpmd backend text phpmd.xml"
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "platform": {
      "php": "8.0.30"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}