# phpMyAdmin (Développement uniquement)
PMA_HOST=db
PMA_USER=root
PMA_PASSWORD=root_password
PMA_PORT=8081

# Azure Storage (pour les uploads de rapports)
AZURE_STORAGE_NAME=appsoutenancestorage
AZURE_STORAGE_KEY=your_storage_key
AZURE_STORAGE_CONTAINER=uploads
AZURE_STORAGE_ENDPOINT=https://appsoutenancestorage.blob.core.windows.net/

# Sécurité
SESSION_LIFETIME=120
SECURE_COOKIES=false
CSRF_TOKEN_NAME=csrf_token
CSRF_TOKEN_EXPIRY=3600
PASSWORD_COST=12

# Audit et Logging
LOG_CHANNEL=stack
LOG_LEVEL=debug
LOG_MAX_FILES=14
LOG_AUTH_ATTEMPTS=true
LOG_ADMIN_ACTIONS=true

# Upload de fichiers
MAX_UPLOAD_SIZE=16777216
ALLOWED_EXTENSIONS=pdf,doc,docx,odt,txt