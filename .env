# Configuration générale de l'application
APP_NAME=App-Soutenance
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8080
APP_KEY=base64:JmZk3xLpJZ8MyMw5yZrDnKaSO6uCxlsWF34fC5XUx9o=

# Configuration de la base de données
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=app_soutenance
DB_USERNAME=app_user
DB_PASSWORD=app_password
DB_PREFIX=

# Configuration du serveur SMTP pour les emails
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=soutenance@example.com
MAIL_FROM_NAME="${APP_NAME}"

# Configuration Azure (pour le déploiement)
AZURE_STORAGE_ACCOUNT=appsoutenancestorage
AZURE_STORAGE_KEY=
AZURE_STORAGE_CONTAINER=rapports

# Configuration de session et de sécurité
SESSION_DRIVER=file
SESSION_LIFETIME=120
SESSION_SECURE_COOKIE=false

# Limite de taille pour les téléchargements
UPLOAD_MAX_SIZE=20M

# Journalisation et audit
LOG_CHANNEL=stack
LOG_LEVEL=debug
AUDIT_ENABLED=true

# Configuration des chemins d'accès
PUBLIC_PATH=/var/www/html/public
UPLOAD_PATH=/var/www/html/public/uploads